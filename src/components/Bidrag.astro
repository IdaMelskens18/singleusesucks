---
import { Image } from "astro:assets";
import card11 from "../assets/images/card11.png";
import card21 from "../assets/images/card21.png";
import card31 from "../assets/images/card31.png";
import card41 from "../assets/images/card41.png";
import coral6 from "../assets/images/coral6.png";
import coral62 from "../assets/images/coral62.png";
import sohest from "../assets/images/sohest.png";
import sostjerne from "../assets/images/sostjerne.png";
---

<section class="bg-[url('/images/bg2.webp')] bg-cover bg-no-repeat bg-center relative h-screen">
  <div class="place-self-center p-14">
    <h2 class="text-6xl font-bold text-white">Beskyt vores hav og miljø</h2>
  </div>
  <div class="grid grid-cols-4 place-items-center">
    <!-- card1 starter her -->
    <a href="https://plasticchange.dk/" class="">
      <div class="card bg-base-100 w-60 shadow-sm z-10 mt-10 hover:scale-110 transition duration-200">
        <figure>
          <Image src={card11} alt="card 1" class="w-100 rounded-t-md" />
        </figure>
        <div class="card-body bg-[#FF116C] rounded-b-md text-white">
          <h2 class="card-title">Støt hver måned</h2>
          <p>Giv et fast valgfrit beløb</p>
        </div>
      </div>
    </a>
    <!-- card1 slutter her  -->

    <!-- card2 starter her -->
    <a href="https://plasticchange.dk/">
      <div class="card bg-base-100 w-60 shadow-sm z-10 mt-10 hover:scale-110 transition duration-200">
        <figure>
          <Image src={card21} alt="card 2" class="w-100 rounded-t-md" />
        </figure>
        <div class="card-body bg-[#FF116C] rounded-b-md text-white">
          <h2 class="card-title">Giv et enkeltbidrag</h2>
          <p>Støt med et valgfrit beløb</p>
        </div>
      </div>
    </a>
    <!-- card2 slutter her  -->

    <!-- card3 starter her -->
    <a href="https://plasticchange.dk/">
      <div class="card bg-base-100 w-60 shadow-sm z-10 mt-10 hover:scale-110 transition duration-200">
        <figure>
          <Image src={card31} alt="card 3" class="w-100 rounded-t-md" />
        </figure>
        <div class="card-body bg-[#FF116C] rounded-b-md text-white">
          <h2 class="card-title">Støt med testamente</h2>
          <p>Giv en renere verden videre</p>
        </div>
      </div>
    </a>
    <!-- card3 slutter her  -->

    <!-- card4 starter her -->
    <a href="https://plasticchange.dk/">
      <div class="card bg-base-100 w-60 shadow-sm z-10 mt-10 hover:scale-110 transition duration-200">
        <figure>
          <Image src={card41} alt="card 4" class="w-100 rounded-t-md" />
        </figure>
        <div class="card-body bg-[#FF116C] rounded-b-md text-white">
          <h2 class="card-title">Bliv sponsor</h2>
          <p>Støt som virksomhed</p>
        </div>
      </div>
    </a>
    <!-- card4 slutter her  -->

    <section class="bidragparallaxgrafik fullwidthsection z-1">
      <div class="mt-8 h-screen w-full bg-cover bg-center grid grid-cols-12 overflow-hidden">
        <Image src={coral6} alt="koral" class="w-120 absolute -left-6 h-auto -z-10 -mt-115" />
        <Image src={sohest} alt="søhest" class="w-30 absolute h-auto z-10 left-93 col-start-2 bidragparallaxgrafik1" />
        <Image src={coral62} alt="koral" class="w-120 bg-left absolute right-0 -mt-115 -z-10" />
        <Image src={sostjerne} alt="søstjerne" class="w-70 absolute h-auto z-10 right-70 col-start-5 bidragparallaxgrafik2" />
      </div>
    </section>
  </div>
</section>
<script>
  /* Import af Motion One bibliotek */
  import { animate, stagger, inView, scroll } from "motion";

  /* Parallaxgrafik */
  scroll(animate(".bidragparallaxgrafik1", { y: [120, -600] }), {
    target: document.querySelector(".bidragparallaxgrafik"),
    offset: ["start end", "end start"],
  });

  scroll(animate(".bidragparallaxgrafik2", { x: [-100, 100], y: [120, -800] }), {
    target: document.querySelector(".bidragparallaxgrafik"),
    offset: ["start end", "end start"],
  });
</script>

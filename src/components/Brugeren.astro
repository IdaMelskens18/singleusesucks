<article class="h-full w-full bg-cover bg-center" style="background-image: url('/problemet/bg2.webp')" >
    <div class="parallaxgrafik sticky h-screen w-full">
        <img src="/brugeren/blufisk.png" alt="fisk" class="absolute max-w-120 -left-50 top-40 parallaxgrafik1">
        <img src="/brugeren/fisk.png" alt="fisk" class="absolute max-w-100 left-0 top-80 parallaxgrafik2">
        <img src="/brugeren/fisk2.png" alt="fisk" class="absolute max-w-150 -left-30 top-90 parallaxgrafik3">
    </div>
    <section class="h-screen w-full z-20 inview_animate">
        <h1 class="text-center font-bold text-6xl pb-36">Gode råd mod plastikspil</h1>
        <div class="container grid grid-cols-4 max-w-[1200px] mx-auto [&_span]:font-bold [&_div]:mx-auto [&_div]:my-8 staggeranimation" id="stagger">


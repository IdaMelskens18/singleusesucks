            </div>
        </div>
    </section>


</article>

<script>
    /* Import af Motion One bibliotek */
import { animate, stagger, inView, scroll, delay } from "motion";

/* Parallaxgrafik */ 
scroll(animate(".parallaxgrafik1", { x: [-400, 2600] }), {
		target: document.querySelector(".parallaxgrafik"), offset: ["start end", "end start"]
	});
	scroll(animate(".parallaxgrafik2", { x:[2000, -800] }), {
		target: document.querySelector(".parallaxgrafik"), offset: ["start end", "end start"]
	});
	scroll(animate(".parallaxgrafik3", { x: [-1500, 2000], y: [0, 400] }), {
		target: document.querySelector(".parallaxgrafik"), offset: ["start end", "end start"]
	});

/* inView animation */
inView( ".inview_animate" , () =>{
	animate( ".inview_animate", {y:[200, 0], opacity:[0, 1]}, {duration: 1, delay:1})
	})

/* Stagger animation */
inView( "#stagger" , () =>{
	animate(
	".staggeranimation div",
	{ opacity: [0, 1], x:[-100,0]},
	{ 
		delay: stagger(.3, { startDelay: 2 })
	}
	)
})
</script>